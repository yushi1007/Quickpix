    <title>QuickPix</title>
    </head>
    <body>
        
        <div class="navbar">
            <div>
                <a class="logo" href="/">Quick<span>Pix</span></a>
            </div>
            <div>
            <a href="/login">Sign In</a>
            <%= link_to "Sign Up", new_user_path %>
            </div>
        </div>
        
          <% if logged_in? %>
        <div class="navbar">

            <div>
                <a class="logo" href="/">Quick<span>Pix</span></a>
            </div>

            <div>
            <a href="/images">Explore</a>
            <%= link_to "Logout", logout_path, method: "delete" %>
            <%= link_to current_user.name, user_path(current_user.id) %>
            <a id="cart-icon" href="/order_images"><i class="fas fa-shopping-cart"></i></a>
            </div>

        </div>
             <img src="https://images.unsplash.com/photo-1554147090-e1221a04a025?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1631&q=80" class="background"/>
        <section class="hero">
            <div class="containers">
                <div class="left-col">
                    <p class="subhead">Create your art store</p>
                    <h2>Upload your images and start earning money</h2>
                    <div class="hero-cta">
                         <h3>Welcome <%= current_user.name %></h3>
                    </div>
                </div>
            </div>
        </section>
            <% else %>
                <img src="https://images.unsplash.com/photo-1554147090-e1221a04a025?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1631&q=80" class="background"/>
        <section class="hero">
            <div class="containers">
                <div class="left-col">
                    <p class="subhead">Create your art store</p>
                    <h2>Upload your images and start earning money</h2>
                    <div class="hero-cta">
                        <%= link_to "Join", new_user_path %>
                    </div>
                </div>
            </div>
        </section>           
            <% end %>
    

