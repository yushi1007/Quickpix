<h1>Upload New Image</h1>
<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
           <li class="error"> <%= error %></li>
        <% end %>
    </ul>
<% end %>
<%= form_for @image do |f| %>
<%= f.label "name:" %>
<%= f.text_field :name %><br><br>
<%= f.label "description:" %>
<%= f.text_area :description %><br><br>
<%= f.label "price:" %>
<%= f.text_field :price %><br><br>
<%= f.label "url:" %>
<%= f.text_field :url %><br><br>

<%= f.submit "Submit" %> 
<% end %>


  
  
  
  
