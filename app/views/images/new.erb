<h1>Upload New Image</h1>

<%= form_for @image do |f| %>
<%= f.label "name:" %>
<%= f.text_field :name %><br><br>
<%= f.label "description:" %>
<%= f.text_field :description %><br><br>
<%= f.label "price:" %>
<%= f.number_field :price %><br><br>
<%= f.label "url:" %>
<%= f.text_field :url %><br><br>
<%= f.label "tag:" %>
<%= f.collection_select :image_tag_ids, @tags, :id, :tag %><br><br>
<%= f.submit "Submit" %>
<% end %>

